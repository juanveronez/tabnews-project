{
  "name": "tabnews-project",
  "version": "1.0.0",
  "description": "Implementação do Tabnews.com.br para treinar desenvolvimento de software.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "services:up": "docker compose -f infra/compose.yml up -d",
    "services:stop": "docker compose -f infra/compose.yml stop",
    "services:down": "docker compose -f infra/compose.yml down",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "migration:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migration:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development down"
  },
  "author": "Juan Veronez (juan.monteirov@gmail.com)",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.4",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "prettier": "^3.5.1"
  }
}
